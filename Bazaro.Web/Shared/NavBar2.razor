@using Bazaro.Data.Models

<Sidebar @ref="sidebar">
    <SidebarContent>
        <SidebarNavigation>
            <SidebarLabel>Notes</SidebarLabel>
            <SidebarItem>
                <SidebarLink Toggled="(isOpen)=> NoteSubItems.Toggle(isOpen)" IsShow="true">
                    <Icon Name="IconName.StickyNote" Margin="Margin.Is3.FromRight" />Note 1
                </SidebarLink>
                <SidebarSubItem @ref="NoteSubItems" IsShow="true">
                    <SidebarItem>
                        <SidebarLink To="#edit/1">Subnote 1</SidebarLink>
                    </SidebarItem>
                    <SidebarItem>
                        <SidebarLink To="#edit/2">Subnote 2</SidebarLink>
                    </SidebarItem>
                </SidebarSubItem>
            </SidebarItem>
        </SidebarNavigation>
    </SidebarContent>
</Sidebar>

@code{
    Sidebar sidebar;
    Entry[]? entries;

    SidebarSubItem NoteSubItems;

    void ToggleSidebar()
    {
        sidebar.Toggle();
    }

    protected override async Task OnInitializedAsync()
    {
        // Fill "entries" array
    }
}