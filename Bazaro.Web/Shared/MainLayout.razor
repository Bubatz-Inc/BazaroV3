@inherits LayoutComponentBase
@inject NavigationManager nav
<PageTitle>Bazaro</PageTitle>

<div class="page">
    <div style="z-index: +2;">
        <NavBar/>
    </div>
    <AuthorizeView>
        <Authorized>
            <div style="z-index: +2;">
                <NavBar2/>
            </div>
        </Authorized>
    </AuthorizeView>

    <main>
        <div class="top-row px-4 auth" >
            <LoginDisplay />
        </div>

        <article class="content px-4" style="margin-left: 270px; ">
            @Body
        </article>
    </main>
</div>

@code{
    private void NavToCounter()
    {
        nav.NavigateTo("counter");
    }
}