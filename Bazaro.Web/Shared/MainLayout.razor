@inherits LayoutComponentBase
@inject NavigationManager nav
<PageTitle>Bazaro.Web</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
        <button class="btn btn-primary" @onclick="NavToCounter" >Counter</button>
    </div>

    <main>
        <div class="top-row px-4 auth">
            <LoginDisplay />
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code{
    private void NavToCounter()
    {
        nav.NavigateTo("counter");
    }
}