@page "/dashboard"
@using Blazorise
@using Blazorise.Sidebar
@using Blazorise.Markdown
@using Blazorise.TreeView
@using Blazorise.Charts
@inject NavigationManager Nav
@inject CalendarService calendarService

<div class="container" style="padding-left: 10%; padding-right: 10%">
<h3>Dashboard</h3>
    <!-- ROW 1 -->
    <div class="row">
        <div class="col-6">
        <div class="row fullsize">
            <div class="col">
                <Blazorise.Card Margin="Margin.Is4.OnY" Class="fullsize">
                    <CardBody>
                        <CardTitle Size="5">Recently Opened</CardTitle>
                        <CardText>
                            <br/>
@*                            @foreach(var entry in _last5Entries)
                                {
                                    <button class="btn btn-link">@entry.Title</button>
                                }*@
                            </CardText>
                    </CardBody>
                </Blazorise.Card>
            </div>
        </div>

        </div>
        <div class="col-6">
            <Blazorise.Card Margin="Margin.Is4.OnY">
                    <CardBody>
                        <CardTitle Size="5">This weeks's events</CardTitle>
                        <CardText>
                        <div  style="display: inline">

                            @if(_calendarEntries is not null)
                            {
                                @foreach(var entry in _calendarEntries)
                                {
                                    @if(entry is not null)
                                    {
                                        <Label>- @entry.Entry.Title</Label>
                                    }
                                }
                            }
                            </div>
                        </CardText>
                    </CardBody>
                </Blazorise.Card>
                <Blazorise.Card Margin="Margin.Is4.OnY">
                    <CardBody Class="fullsize">
                        <CardTitle Size="5">Quick note</CardTitle>
                        <CardText>
                                <MemoEdit Rows="3"/>
                                <Blazorise.Button Color="Blazorise.Color.Success" Style="float: right; margin-top: 5px">Add to Quicknotes</Blazorise.Button>
                        </CardText>
                    </CardBody>
                </Blazorise.Card>
        </div>
    </div>

    <!-- ROW 2 -->
    <div class="row top-buffer" >
        <div class="col-lg-12">
                <Blazorise.Card Margin="Margin.Is4.OnY">
                    <CardBody>
                        <CardTitle Size="5">Statistics</CardTitle>
                        <CardText>
                            
                        </CardText>
                    </CardBody>
                </Blazorise.Card>        
        </div>
    </div>

    <!-- ROW 3 -->
    <div class="row">
        <div class="col">
            <!--div style="background-color: blueviolet; padding: 10px; border: 1px solid green;"/-->
        </div>
        <div class="col">
            <!--div style="background-color: blueviolet; padding: 10px; border: 1px solid green;"/-->
        </div>
    </div>
</div>


<style>
    .fullsize{
        height: 100%
    }
    .top-buffer { margin-top:20px; }
</style>
